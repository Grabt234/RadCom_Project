<!--Monostatic simulation input file-->
 
<?xml version="1.0" ?>
<!DOCTYPE simulation SYSTEM "../../fers-xml.dtd">
<simulation name="sim_mono">
  <parameters>
    <starttime>0</starttime>
    <endtime>0.5</endtime>
    <rate>4.096e6</rate>
    <export binary="true" csvbinary="false" xml="false"/>
  </parameters>

  <pulse name="cw_emission" type="file" filename="Emission.h5">
    <power>0.1</power>
    <carrier>2.45e9</carrier> 
  </pulse>

  <timing name="clock">
  <frequency>2.45e9</frequency>
  </timing>

  <antenna name="can" pattern="parabolic">
	<diameter>1</diameter>
  </antenna>

 
  <platform name="Tx">

    <motionpath>
      <positionwaypoint>
        <x>0</x>
        <y>0</y>
        <altitude>0</altitude>
        <time>0</time>
      </positionwaypoint>
    </motionpath>

    <fixedrotation>
      <startazimuth>0.0</startazimuth>
      <azimuthrate>0</azimuthrate>
      <startelevation>0</startelevation>
      <elevationrate>0</elevationrate>
    </fixedrotation>

    <transmitter name="Tx" type="continuous" antenna="can" pulse="cw_emission" timing="clock">
    </transmitter>
  </platform>
  
<platform name="Rx">

    <motionpath>
      <positionwaypoint>
        <x>0</x>
        <y>-2</y>
        <altitude>0</altitude>
        <time>0</time>
      </positionwaypoint>
    </motionpath>

    <fixedrotation>
      <startazimuth>0.0</startazimuth>
      <azimuthrate>0</azimuthrate>
      <startelevation>0</startelevation>
      <elevationrate>0</elevationrate>
    </fixedrotation>

    <receiver name="cw_response" type="continuous" antenna="can" timing="clock">
      <window_skip>0</window_skip>
      <prf>1</prf>
      <window_length>0.5</window_length>
      <noise_temp>1000</noise_temp>
    </receiver>
   
  </platform>


<platform name="target1">

    <motionpath interpolation="linear">
      <positionwaypoint>
        <x>500</x>
        <y>0</y>
        <altitude>0</altitude>
        <time>0</time>
      </positionwaypoint>

    </motionpath>

    <fixedrotation>
      <startazimuth>0.0</startazimuth>
      <startelevation>0.0</startelevation>
      <azimuthrate>0</azimuthrate>
      <elevationrate>0</elevationrate>
    </fixedrotation>

    <target name="wings">
      <rcs type="isotropic">
        <value>20</value>
      </rcs>
    </target>

 </platform>

<platform name="target2">

    <motionpath interpolation="linear">
      <positionwaypoint>
        <x>900</x>
        <y>0</y>
        <altitude>0</altitude>
        <time>0</time>
      </positionwaypoint>
	<positionwaypoint>
        <x>901</x>
        <y>0</y>
        <altitude>0</altitude>
        <time>1</time>
      </positionwaypoint>


    </motionpath>

    <fixedrotation>
      <startazimuth>0.0</startazimuth>
      <startelevation>0.0</startelevation>
      <azimuthrate>0</azimuthrate>
      <elevationrate>0</elevationrate>
    </fixedrotation>

    <target name="wings">
      <rcs type="isotropic">
        <value>20</value>
      </rcs>
    </target>

 </platform>




</simulation>
