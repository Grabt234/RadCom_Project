%================================================
% Note that this file is dabMode independant
% Tests the alteration of the symbol count
%================================================

Ls = [1,2,5,10];
dab_mode = load_dab_rad_constants(3);

for i = 1:length(Ls)
    
    %symbols
    L = Ls(i);
    L_0 = L;
    %carriers no center
    K = dab_mode.K ;    
    %carriers incl. center
    K_0 = dab_mode.K + 1;
    %integration period
    Tu = dab_mode.Tu;
    %symbol period
    Ts = dab_mode.Ts;
    %gaurd inteval
    Tg = dab_mode.Tg;
    %intra frame time: spacing between pulses within a frame
    T_intra = dab_mode.T_intra;

    %% ENCODING BITS
    
    A_pulses = ones(F,L_0,K_0);

    %Frequency weights 
    W_cube = ones(F,L_0,K_0);
    W_cube = rescale_cube_to_unity_weights(W_cube,F);

    symbol_time = 1:1:Ts;

    %% removing nulls

    %removing null to make basic pulse wave
    A_pulses = A_pulses(:,2:end,:);
    W_cube = W_cube(:,2:end,:);
    L_0 = L_0 - 1; %remvoed null tf symbols go down
    %% GENERATING WAVEFORM

    %generating all envelopes of framestx = tx(1:4096);
    S = gen_all_pulses(symbol_time, F, L_0, Tu, Ts, Tg, K,W_cube,A_pulses);

%% plotting

    S = reshape(S,2048,[]);
    subplot(2,2,i)
    h = surf(abs(S));
    colour = [0, 0.4470, 0.7410];
    colormap 'white'; 
    h.FaceLighting = 'flat';
    h.EdgeAlpha = 1;
    h.EdgeColor = colour;
    h.EdgeLighting = 'gouraud';
    xlabel("Carrier [K]");
    ylabel("Symbol Index [L]",'FontSize',15);
    zlabel("Magnitude [arb]",'FontSize',15);

end

title("FREQUNECY DOMAIN SPECTROGRAM OF OFDM SYMBOL GENERATED USING AN ARBITRARY DAB MODE",'FontSize',17)





